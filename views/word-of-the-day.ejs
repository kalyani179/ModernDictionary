<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>word-of-the-day :
        <%=todayDate%>
    </title>
    <link rel="icon" href="images/encyclopedia.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/word-styles.css">
</head>

<body class="word-of-the-day">
    <div class="date">
        <h2>
            <%=todayDate%>
        </h2>
    </div>
    <h1>
        <strong> <%=todayWord%></strong>
    </h1>
    <div class="container-fluid ">
        <h3>Definitions : </h3>
        <% for(var i = 0;i<todayWordDefinitions.length;i++) {%>
            <div class="container ">
                <li class="examples">
                    <% if(todayWordPartsOfSpeech[i]){ %>
                        <p>
                            (
                            <%=todayWordPartsOfSpeech[i]%> )
                        </p>
                        <% } %>
                            <h5>

                                <%-todayWordDefinitions[i]%>

                            </h5>
                </li>
                <br>
            </div>

            <% } %>
                <h3>Examples : </h3>
                <% todayWordExamples.forEach(element => {%>
                    <div class="container ">


                        <li class="examples">
                            <h5>
                                <%-element%>

                            </h5>
                        </li>
                        <br>
                    </div>

                    <% }) %>
                        <h3>Note :</h3>
                        <div class="container ">
                            <li class="examples">
                                <h5>
                                    <%=todayWordNote%>
                                </h5>
                            </li>
                        </div>
    </div>
    <footer>
        <div class="container-fluid">

        </div>
    </footer>

</body>

</html>