<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%=word%> - related - words</title>
    <link rel="icon" href="../images/encyclopedia.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/word-styles.css">
</head>

<body class="word-bg">
    <div class="related-container">
        <% if(synonyms.length){ %>
            <h1>
                <strong><%=word%></strong> - Synonyms</h1>
            <div class="container-fluid">
                <div class="container related-words-container">
                    <% synonyms.forEach(element => {%>
                        <div class="synonym">
                            <li class="examples">
                                <h5>
                                    <%-element%>
                                </h5>
                            </li>
                        </div>
                        <% }) %>

                </div>
            </div>
            <% } %>

                <% if(rhyme.length){ %>
                    <h1>
                        <strong><%=word%></strong> - Rhymings</h1>

                    <div class="container-fluid">
                        <div class="container related-words-container">
                            <% rhyme.forEach(element => {%>
                                <div class="synonym">
                                    <li class="examples">
                                        <h5>
                                            <%-element%>
                                        </h5>
                                    </li>
                                </div>
                                <% }) %>

                        </div>
                    </div>
                    <% } %>
                        <% if(hypernym.length){ %>
                            <h1>
                                <strong><%=word%></strong> - Hypernyms</h1>
                            <div class="container-fluid">
                                <div class="container related-words-container">
                                    <% hypernym.forEach(element => {%>
                                        <div class="synonym">
                                            <li class="examples">
                                                <h5>
                                                    <%-element%>
                                                </h5>
                                            </li>
                                        </div>
                                        <% }) %>

                                </div>
                            </div>
                            <% } %>
                                <% if(verbForm.length){ %>
                                    <h1>
                                        <strong><%=word%></strong> - Verb-Forms</h1>
                                    <div class="container-fluid">
                                        <div class="container related-words-container">
                                            <% verbForm.forEach(element => {%>
                                                <div class="synonym">
                                                    <li class="examples">
                                                        <h5>
                                                            <%-element%>
                                                        </h5>
                                                    </li>
                                                </div>
                                                <% }) %>

                                        </div>
                                    </div>
                                    <% } %>

                                        <% if(antonyms.length){ %>
                                            <h1>
                                                <strong><%=word%></strong> - Antonyms</h1>
                                            <div class="container-fluid">
                                                <div class="container related-words-container">
                                                    <% antonyms.forEach(element => {%>
                                                        <div class="antonym">
                                                            <li class="examples">
                                                                <h5>
                                                                    <%-element%>

                                                                </h5>
                                                            </li>
                                                        </div>
                                                        <% }) %>

                                                </div>
                                            </div>
                                            <% } %>

    </div>
    <footer>
        <div class="container-fluid">

        </div>
    </footer>
</body>

</html>